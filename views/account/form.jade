extends ../main

block content
  form(method="post")
    div(class="form-group")
      div(class="form-group")
        label(for="email") Email Address
        input(class="form-control", type="email", name="email", id="email", readonly=true, value=user.email)
      div(class="form-group")
        label(for="password") Password
        input(class="form-control", type="password", name="password", id="password")
      div(class="form-group")
        label(for="verify-password") Verify Password
        input(class="form-control", type="password", name="verify-password", id="verify-password")
      button(type="submit", class="btn btn-primary") Save