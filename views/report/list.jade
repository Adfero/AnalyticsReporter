extends ../main

block content
  div()
    a(href="/report", class="btn btn-primary") New Report
  table(class="table table-striped table-hover")
    thead
      th Report
      th Created
      th Actions
    tbody
      for report in reports
        tr
          td= report.name
          td= report.created
          td
            a(href="/report/" + report._id, class="btn btn-xs btn-default")
              span(class="glyphicon glyphicon-share")
              |  View